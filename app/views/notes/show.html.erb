<h1>Note:</h1>
<p><%= @note.display_at.strftime('%a %m/%d/%Y %l:%M %p') %></p>
<p><%= @note.text %></p>
<p><%= @note.detail %></p>

<div>
    <%= link_to "Back to Notes", notes_path(@note), class: 'btn btn-info btn-sm' %>
    <%= link_to "Update", edit_note_path(@note), class: 'btn btn-warning btn-sm' %>
    <%= link_to "Destroy", note_path(@note), class: 'btn btn-danger btn-sm', data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                  } %>
</div>