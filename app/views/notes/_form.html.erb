  <div class="form-group">
    <%= form.label :display_at %><br>
    <%= form.datetime_field :display_at, step: "any", class: 'form-control' %>
    <% note.errors.full_messages_for(:text).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :text %><br>
    <%= form.text_area :text, class: 'form-control' %>
    <% note.errors.full_messages_for(:text).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :detail %><br>
    <%= form.text_area :detail, class: 'form-control' %>
    <% note.errors.full_messages_for(:detail).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.check_box :pin, class: 'form-check-input' %>
    <%= form.label :pin, "Pin" %>
    <% note.errors.full_messages_for(:detail).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>